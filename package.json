  "repository": {
    "type": "git",
    "url": "git+https://github.com/casadelaweb/restart.css.git"
  },
  "author": "https://github.com/casadelaweb/",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/casadelaweb/restart.css/issues"
